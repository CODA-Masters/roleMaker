<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".ShowFriendsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pending players"
        android:id="@+id/pendingPlayersText"
        android:layout_weight="0" />

    <ListView
        android:id="@+id/pendingPlayersList"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="1dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Current players"
        android:id="@+id/playersText"
        android:layout_weight="0" />

    <ListView
        android:id="@+id/playersList"
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="1dp"/>

</LinearLayout>